<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarUser"
    android:orientation="vertical"
    android:background="@color/bg_App">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_my_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/btn_volver_registrar_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icono_atras2_foreground"
            android:padding="0dp"

            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.043"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.615" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Registrese en feels"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintBottom_toTopOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.806" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginRight="16sp"
            android:layout_marginLeft="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.185">

            <EditText
                android:id="@+id/et_name_registrar_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/fondo_btn_login"
                android:fontFamily="@font/poppins_regular"
                android:hint="Nombre"
                android:inputType="textCapWords"
                android:imeOptions="actionNext"
                android:maxLength="40"
                android:textAllCaps="true"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/et_lastname_registrar_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="8dp"
                android:background="@drawable/fondo_btn_login"
                android:fontFamily="@font/poppins_regular"
                android:hint="Apellidos"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLength="40"
                android:paddingTop="3dp"
                android:paddingLeft="18dp"
                android:paddingRight="18dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18sp"/>

        </LinearLayout>

        <EditText
            android:id="@+id/et_email_registrar_user"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="16sp"
            android:background="@drawable/fondo_btn_login"
            android:fontFamily="@font/poppins_regular"
            android:letterSpacing="0.05"
            android:hint="Correo electrónico"
            android:imeOptions="actionNext"
            android:inputType="textEmailAddress"
            android:maxLength="40"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="3dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

        <EditText
            android:id="@+id/et_cellphone_registrar_user"
            android:layout_width="match_parent"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:background="@drawable/fondo_btn_login"
            android:hint="Teléfono"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:letterSpacing="0.05"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="3dp"
            android:inputType="number"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLength="15"

            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_email_registrar_user" />

        <EditText
            android:id="@+id/et_password_1_registrar_user"
            android:layout_width="match_parent"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:background="@drawable/fondo_btn_login"
            android:hint="Contraseña"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="3dp"
            android:inputType="textPassword"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLength="40"

            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_cellphone_registrar_user" />

        <EditText
            android:id="@+id/et_password_2_registrar_user"
            android:layout_width="match_parent"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:background="@drawable/fondo_btn_login"
            android:hint="Confirmar contraseña"
            android:textColorHint="@color/black"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:paddingTop="3dp"
            android:inputType="textPassword"
            android:imeOptions="actionSend"
            android:singleLine="true"
            android:maxLength="40"

            android:layout_height="47dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_password_1_registrar_user" />

        <CheckBox
            android:id="@+id/check_terminos_condiciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/turquesa"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/black"
            android:text="Aceptar términos y condiciones"
            app:layout_constraintBottom_toTopOf="@+id/btn_registrarse_registrar_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_password_2_registrar_user"
            app:layout_constraintVertical_bias="0.402">

        </CheckBox>

        <TextView
            android:id="@+id/tv_llenar_campos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16sp"
            android:layout_marginLeft="16sp"
            android:textColor="@color/rojo"
            android:textSize="12sp"
            android:fontFamily="@font/poppins_regular"
            app:layout_constraintBottom_toTopOf="@+id/btn_registrarse_registrar_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check_terminos_condiciones" />

        <Button
            android:id="@+id/btn_registrarse_registrar_user"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="104dp"
            android:layout_marginRight="16sp"
            android:background="@drawable/fondo_btn_ingresar"
            android:fontFamily="@font/poppins_semibold"
            android:paddingTop="5sp"
            android:text="Registrarse"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_password_2_registrar_user" />




    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>